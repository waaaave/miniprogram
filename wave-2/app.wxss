/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.view-container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100vh;
}
.light{
  opacity: 0.5;
}
.view-container view{
  width: 100%;
  height: 100%;
}
.view-container text{
  color: #ffffff;
  padding: 16px;
  display: block;
  font-size:32px;
}
image, .image{
  width: 100%;
}